{
    "compilerOptions": {
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": false,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "target": "es2022",
      "moduleResolution": "nodenext",
      "outDir": "dist",
    },
    "exclude": ["node_modules"],
    "include": ["js/**/*"]
  }